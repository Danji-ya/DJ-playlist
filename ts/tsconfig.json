{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/","**/*.ts", "**/*.tsx"]
}
